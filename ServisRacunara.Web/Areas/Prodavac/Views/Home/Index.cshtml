@using ServisRacunara.Web.Areas.Prodavac.Models
@model ServisRacunara.Web.Areas.Prodavac.Models.ProdavacIndexVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prodavač panel</h2>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading" style="background-color:royalblue;color:white">Zahtjevi za servis</div>
    <div class="panel-body">
        <p>U ovoj tabeli su zahtjevi za servis klijenata za koje je potrebno kreirati servisnie naloge</p>
    </div>

    <!-- Table -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Datum zahtjeva</th>
                <th>Ime i prezime</th>

                <th>Napomena</th>
                <th align="center">Servis na adresi</th>
                <th align="center">Preuzimanje</th>
                <th align="center">Isporuka</th>
                <th>Adresa</th>
                <th>Kreiraj Nalog</th>

            </tr>
        </thead>
        <tbody>

            @foreach (ZahtjeviVM x in Model.ZahtjeviZaServis)
            {
                <tr>
                    <td>@x.Datum.ToShortDateString()</td>
                    <td>@x.ImePrezime</td>

                    <td>@x.Napomena</td>
                    <td align="center">

                        @Html.CheckBoxFor(y=> x.ServisNaAdresi, new { @disabled = "disabled" })
                    </td>
                    <td align="center">
                        @Html.CheckBoxFor(y => x.Preuzimanje, new { @disabled = "disabled" })
                    </td>
                    <td align="center">
                        @Html.CheckBoxFor(y => x.Isporuka, new { @disabled = "disabled" })


                    </td>
                    <td>@x.Adresa</td>

                    <td>
                        @Html.ActionLink("Kreiraj nalog", "KreirajNalog", new { ZahtjevZaServisId = x.ZahtjevZaServisId }, new { @class = "btn btn-danger btn-sm" })
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>